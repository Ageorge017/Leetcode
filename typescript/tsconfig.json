{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "inlineSourceMap": true,
    "outDir": "build",
    "lib": ["dom", "es2022"],
    "rootDir": "./",
    "noEmit": false,
    "esModuleInterop": true,
    "paths": {
      "classes": ["./classes"],
      "src": ["./src"],
      "helpers": ["./helpers"]
    }
  },

  "exclude": ["./build/**/*"]
}
